{
	"compilerOptions": {
		"target": "ESNext",
		"moduleResolution": "nodenext",
		"module": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["vitest/globals"],
		"rootDir": ".",
		"outDir": "./dist",
		"noEmit": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
